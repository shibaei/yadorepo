<!DOCTYPE html>
<html>
  <head>
    <title>Yadorepo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>
        <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav-left">
            <%= link_to image_tag("rogo_icon", class: :logo), root_path %>
          </div>
         
           <% if user_signed_in? %>
            <div class="nav-right">
              <%= link_to "マイページ", "/users/#{current_user.id}",class:"nav-user" %>
              <%= link_to "宿レポ投稿", new_post_path, class:"nav-btn" %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete , class:"nav-logout" %>
            </div>
           <% else %>
            <div class="nav-right">
              <%= link_to "ログイン", new_user_session_path, class:"nav-btn" %>
              <%= link_to "新規登録", new_user_registration_path, class:"nav-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <p class="copyright">Copyright © 宿レポ All rights reserved.</p>
    </footer>
  </body>
</html>
