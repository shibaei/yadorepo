<div class="contents row">
  <div class="container">
      <h2 class="page-heading">ユーザーログイン</h2>
      
      <%# フリマから流用 %>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>

        <%# プロトスペースから流用 %>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn %>
        </div>
      <% end %>

  </div>
</div>