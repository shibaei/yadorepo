<div class="form-wrapper">
  <div class="form-field">

      <h2 class="page-heading">ユーザーログイン</h2>
      
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" ,class:"form-text"%>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "current-password" ,class:"form-text"%>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class:"register-btn" %>
        </div>
      <% end %>
    
  </div>
</div>