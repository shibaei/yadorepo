<% if user_signed_in? && current_user.id == @post.user_id %>
  <div class="post__manage">
    <%= link_to "編集する", edit_post_path(@post.id), class: :post__btn %>
    <%= link_to "削除する", post_path(@post.id), method: :delete, class: :post__destroy %>
  </div>
<% end %>


<div class="post__wrapper">
  <div class="length">
  宿泊期間：
    <%= @post.check_in.strftime("%Y年%m月%d日") %>〜<%= @post.check_out.strftime("%Y年%m月%d日") %>
  </div>
  <div class="post__title">
    【<%= @post.place.name %>】<%=@post.title%>
  </div>
    <div class="post__information">
    ◆宿：<%= @post.hotel %>　　◆部屋：<%= @post.room %>
  </div>
    <div class="post__user">
    by：<%= @post.user.nickname %>
  </div>
  <%= image_tag @post.images[0], class: "post-main-image" %><br>
  <div class="other-images">
    <% @post.images[1..-1].each do |image| %>
        <%= image_tag image ,class: "other-image" %>
    <%end%>
  </div>
  <div class="post__text">
    <%= safe_join(@post.text.split("\n"),tag(:br)) %>
  </div>
  
</div>
